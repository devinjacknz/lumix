# Helius API密钥 (从 https://dev.helius.xyz 获取)
HELIUS_API_KEY=your_helius_api_key


# Webhook URL (可选，用于接收交易通知)
WEBHOOK_URL=https://your-webhook-url.com/callback

# 多链RPC配置
SOLANA_RPC_URL=https://mainnet.helius-rpc.com
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://mainnet.base.org

# 多链私钥管理 (请使用加密存储，不要直接存储明文私钥)
SOLANA_PRIVATE_KEY=your_encrypted_solana_key
ETH_PRIVATE_KEY=your_encrypted_eth_key
BASE_PRIVATE_KEY=your_encrypted_base_key

# AI配置
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7

# 数据库配置
DB_TYPE=sqlite
DB_PATH=./data/lumix.db

# 安全配置
ENCRYPTION_KEY=your_encryption_key
ENABLE_AUDIT_LOG=true
MAX_TRANSACTION_VALUE=1000

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# 缓存配置
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 风控配置
RISK_CHECK_ENABLED=true
MAX_SLIPPAGE=1.0
MIN_LIQUIDITY=10000

# Ollama configuration
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000
