{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@lumix/*": ["packages/*/src"]
    },
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ]
} 