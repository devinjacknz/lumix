{
  "name": "@lumix/plugin-chain-analyzer",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@lumix/core": "workspace:*",
    "@lumix/plugin-chain-adapter": "workspace:*",
    "@solana/web3.js": "^1.87.6",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/web3": "^1.2.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "tsconfig": "tsconfig.json",
        "useESM": true
      }]
    },
    "moduleNameMapper": {
      "^@lumix/(.*)$": "<rootDir>/../$1/src"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
} 