{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@lumix/types": ["../types/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.ts",
    "src/dialogue/**/*.ts",
    "src/cache/**/*.ts",
    "src/database/**/*.ts",
    "src/monitoring/**/*.ts",
    "src/chain/**/*.ts",
    "src/config/**/*.ts",
    "src/messaging/**/*.ts",
    "src/middleware/**/*.ts",
    "src/hsm/**/*.ts",
    "src/llm/**/*.ts",
    "src/plugin/**/*.ts",
    "src/analysis/**/*.ts",
    "src/knowledge/**/*.ts",
    "src/memory/**/*.ts",
    "src/persistence/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "references": [
    { "path": "../types" }
  ]
}
